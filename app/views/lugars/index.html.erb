<h1>Listing lugars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lugars.each do |lugar| %>
      <tr>
        <td><%= lugar.name %></td>
        <td><%= image_tag(lugar.picture_url, :width => 300) if lugar.picture.present? %></td>
        <td><%= lugar.description %></td>
        <td><%= link_to 'Show', lugar %></td>
        <td><%= link_to 'Edit', edit_lugar_path(lugar) %></td>
        <td><%= link_to 'Destroy', lugar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% @lugars.each do |lugar| %>
  <h4><%= lugar.name %></h4>  
 <%= image_tag(lugar.picture_url, :width => 300) if lugar.picture.present? %>
